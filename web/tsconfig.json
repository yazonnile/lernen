{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": ["@pyoner/svelte-types", "@types/css"],
    "lib": [
      "es2015",
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./**/*"
  ]
}
